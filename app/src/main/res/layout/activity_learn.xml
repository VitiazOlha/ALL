<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activities.LearnActivity_">

    <ProgressBar
        android:id="@+id/main_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/word"
        android:textAlignment="center"
        android:textSize="50px"
        android:layout_width="750px"
        android:layout_marginTop="650px"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/tr_word"
        android:textAlignment="center"
        android:layout_width="750px"
        android:textSize="50px"
        android:textStyle="bold"
        android:layout_marginTop="750px"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <GridView
        android:id="@+id/main_gv"
        android:layout_width="match_parent"
        android:layout_height="321dp"
        android:numColumns="3" />

    <Button
        android:id="@+id/prev"
        android:text="@string/back_button"
        android:layout_marginTop="850px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getPrev"/>

    <Button
        android:id="@+id/next"
        android:text="@string/next_button"
        android:layout_marginLeft="550px"
        android:layout_marginTop="850px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getNext" />


</FrameLayout>
